@using TestResultBrowser.Web.Models

@if (!string.IsNullOrWhiteSpace(Ticket.Url))
{
    <MudLink Href="@Ticket.Url" Target="_blank" Class="polarion-link" Title="@Ticket.TicketId" Rel="noopener noreferrer">
        <svg viewBox="0 0 24 24" class="polarion-logo">
            <circle cx="12" cy="12" r="11" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="12" y="15" text-anchor="middle" font-size="10" font-weight="bold" fill="currentColor">P</text>
        </svg>
    </MudLink>
}
else
{
    <span class="polarion-link disabled" Title="@Ticket.TicketId (no Polarion base URL configured)">
        <svg viewBox="0 0 24 24" class="polarion-logo">
            <circle cx="12" cy="12" r="11" stroke="currentColor" stroke-width="1.5" fill="none"/>
            <text x="12" y="15" text-anchor="middle" font-size="10" font-weight="bold" fill="currentColor">P</text>
        </svg>
    </span>
}

@code {
    [Parameter]
    public required PolarionTicketReference Ticket { get; set; }
}

<style>
    .polarion-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 4px;
        border: 1px solid #1565c0;
        color: #1565c0;
        text-decoration: none;
        background-color: rgba(21, 101, 192, 0.1);
        transition: background-color 0.15s ease, color 0.15s ease, transform 0.1s ease;
    }

    .polarion-link:hover {
        background-color: rgba(21, 101, 192, 0.25);
        color: #0d47a1;
        transform: scale(1.05);
    }

    .polarion-link.disabled {
        opacity: 0.5;
        border-color: #b0bec5;
        color: #90a4ae;
        background-color: #eceff1;
        cursor: default;
        pointer-events: none;
    }

    .polarion-logo {
        width: 20px;
        height: 20px;
    }
</style>
