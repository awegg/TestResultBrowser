@page "/system-status"
@rendermode InteractiveServer
@using TestResultBrowser.Web.Services
@using MudBlazor
@using Microsoft.AspNetCore.SignalR.Client
@inject ITestDataService TestDataService
@inject IFileWatcherService FileWatcher
@inject ILogger<SystemStatus> Logger
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@implements IAsyncDisposable

<PageTitle>System Status</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">System Status & Monitoring</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">File Scanner Status</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Spacing="2">
                    <MudText>
                        <strong>Last Scan:</strong> @(FileWatcher.LastScanTime?.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")
                    </MudText>
                    <MudText>
                        <strong>Files Processed:</strong> @FileWatcher.LastScanFileCount
                    </MudText>
                    <MudText>
                        <strong>Scanning:</strong> @(FileWatcher.IsScanningInProgress ? "In Progress" : "Idle")
                    </MudText>
                </MudStack>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" 
                          OnClick="RefreshData" 
                          Disabled="@FileWatcher.IsScanningInProgress">
                    @(FileWatcher.IsScanningInProgress ? "Scanning..." : "Scan Now")
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Cache Statistics</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Spacing="2">
                    <MudText>
                        <strong>Total Test Results:</strong> @totalResults.ToString("N0")
                    </MudText>
                    <MudText>
                        <strong>Memory Usage:</strong> @memoryUsageMB.ToString("N2") MB
                    </MudText>
                    <MudText>
                        <strong>Memory %:</strong> @memoryPercentage.ToString("N1")% of @maxMemoryGB GB limit
                    </MudText>
                    <MudProgressLinear Color="@GetMemoryColor()" Value="@memoryPercentage" Class="my-2" />
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Data Coverage</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Spacing="2">
                    <MudText>
                        <strong>Total Builds:</strong> @totalBuilds
                    </MudText>
                    <MudText>
                        <strong>Configurations:</strong> @totalConfigurations
                    </MudText>
                    <MudText>
                        <strong>Domains:</strong> @totalDomains
                    </MudText>
                    <MudText>
                        <strong>Date Range:</strong> @GetDateRangeDisplay()
                    </MudText>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Recent Builds</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                @if (recentBuilds.Any())
                {
                    <MudList T="string" Dense="true">
                        @foreach (var build in recentBuilds.Take(10))
                        {
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Build">
                                @build
                            </MudListItem>
                        }
                    </MudList>
                }
                else
                {
                    <MudText Color="Color.Secondary">No builds loaded yet</MudText>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Monitored Configurations</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudStack Spacing="3">
                    <div>
                        <MudText Typo="Typo.subtitle2"><strong>Versions:</strong></MudText>
                        @if (versions.Any())
                        {
                            <MudChipSet T="string">
                                @foreach (var version in versions.Take(8))
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Primary">@version</MudChip>
                                }
                                @if (versions.Count() > 8)
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Default">+@(versions.Count() - 8) more</MudChip>
                                }
                            </MudChipSet>
                        }
                        else
                        {
                            <MudText Color="Color.Secondary">None</MudText>
                        }
                    </div>
                    
                    <div>
                        <MudText Typo="Typo.subtitle2"><strong>Named Configs:</strong></MudText>
                        @if (namedConfigs.Any())
                        {
                            <MudChipSet T="string">
                                @foreach (var config in namedConfigs.Take(8))
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Secondary">@config</MudChip>
                                }
                                @if (namedConfigs.Count() > 8)
                                {
                                    <MudChip T="string" Size="Size.Small" Color="Color.Default">+@(namedConfigs.Count() - 8) more</MudChip>
                                }
                            </MudChipSet>
                        }
                        else
                        {
                            <MudText Color="Color.Secondary">None</MudText>
                        }
                    </div>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Memory Management</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                @if (memoryPercentage > 90)
                {
                    <MudAlert Severity="Severity.Error">
                        CRITICAL: Memory usage above 90%. Consider clearing cache or increasing MaxMemoryGB limit.
                    </MudAlert>
                }
                else if (memoryPercentage > 75)
                {
                    <MudAlert Severity="Severity.Warning">
                        WARNING: Memory usage above 75%. Monitor closely.
                    </MudAlert>
                }
                else
                {
                    <MudAlert Severity="Severity.Success">
                        Memory usage is within normal limits.
                    </MudAlert>
                }
                
                <MudText Class="mt-4">
                    <strong>Recommendations:</strong>
                </MudText>
                <MudList T="string" Dense="true">
                    @if (memoryPercentage > 50)
                    {
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Warning">
                            Consider archiving older test results
                        </MudListItem>
                        <MudListItem T="string" Icon="@Icons.Material.Filled.Info">
                            Current rate: @totalResults.ToString("N0") results = @memoryUsageMB.ToString("N2") MB
                        </MudListItem>
                    }
                    else
                    {
                        <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                            System is operating efficiently
                        </MudListItem>
                    }
                </MudList>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="ClearCache">
                    Clear All Cache
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private HubConnection? hubConnection;
    private int totalResults;
    private double memoryUsageMB;
    private double memoryPercentage;
    private int maxMemoryGB = 15; // From appsettings.json
    private int totalBuilds;
    private int totalConfigurations;
    private int totalDomains;
    private DateTime? earliestDate;
    private DateTime? latestDate;
    private List<string> recentBuilds = new();
    private List<string> versions = new();
    private List<string> namedConfigs = new();

    protected override async Task OnInitializedAsync()
    {
        UpdateStatistics();
        
        // Initialize SignalR connection
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/hubs/testdata"))
            .WithAutomaticReconnect()
            .Build();

        // Register handler for test data updates
        hubConnection.On<object>("TestDataUpdated", async (updateInfo) =>
        {
            Logger.LogInformation("Received TestDataUpdated notification from SignalR");
            UpdateStatistics();
            
            // Show toast notification to user
            Snackbar.Add("âœ… New test results imported!", Severity.Success, config =>
            {
                config.VisibleStateDuration = 4000;
                config.HideTransitionDuration = 400;
                config.ShowTransitionDuration = 400;
            });
            
            await InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
        Logger.LogInformation("SignalR connection established");
    }

    private void UpdateStatistics()
    {
        totalResults = TestDataService.GetTotalCount();
        var memoryUsageBytes = TestDataService.GetApproximateMemoryUsage();
        memoryUsageMB = memoryUsageBytes / (1024.0 * 1024.0);
        
        var maxMemoryBytes = maxMemoryGB * 1024L * 1024L * 1024L;
        memoryPercentage = (memoryUsageBytes / (double)maxMemoryBytes) * 100;
        
        // Update data coverage statistics
        var buildIds = TestDataService.GetAllBuildIds().ToList();
        totalBuilds = buildIds.Count;
        recentBuilds = buildIds.Take(10).ToList();
        
        totalConfigurations = TestDataService.GetAllConfigurationIds().Count();
        totalDomains = TestDataService.GetAllDomainIds().Count();
        
        var dateRange = TestDataService.GetDateRange();
        earliestDate = dateRange.Earliest;
        latestDate = dateRange.Latest;
        
        // Update configuration monitoring
        versions = TestDataService.GetAllVersions().ToList();
        namedConfigs = TestDataService.GetAllNamedConfigs().ToList();
    }
    
    private string GetDateRangeDisplay()
    {
        if (earliestDate == null || latestDate == null)
            return "No data";
            
        if (earliestDate.Value.Date == latestDate.Value.Date)
            return earliestDate.Value.ToString("yyyy-MM-dd");
            
        return $"{earliestDate.Value:yyyy-MM-dd} to {latestDate.Value:yyyy-MM-dd}";
    }

    private Color GetMemoryColor()
    {
        if (memoryPercentage > 90) return Color.Error;
        if (memoryPercentage > 75) return Color.Warning;
        if (memoryPercentage > 50) return Color.Info;
        return Color.Success;
    }

    private async Task RefreshData()
    {
        Logger.LogInformation("Scan Now button clicked. Current scanning status: {Status}", FileWatcher.IsScanningInProgress);
        await FileWatcher.ScanNowAsync();
        Logger.LogInformation("Scan completed. Updating statistics...");
        UpdateStatistics();
        await InvokeAsync(StateHasChanged);
        Logger.LogInformation("UI updated");
    }

    private void ClearCache()
    {
        TestDataService.Clear();
        UpdateStatistics();
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
